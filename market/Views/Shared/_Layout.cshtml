<!DOCTYPE html>
<html lang="fa-ir" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">فروشگاه</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUS">تماس با ما </a>
                        </li>
                        <partial name="_GroupDropDown" />

                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark" asp-action="ShowCart" asp-controller="Home">سبد خرید</a>
                        <a class="nav-link text-dark">@User.Identity.Name خوش آمدید</a>
                        <a class="nav-link text-dark" asp-area="" asp-action="LogOut" asp-controller="Accounts">خروج</a>

                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Register">ثبت نام</a>
                        <a class="nav-link text-dark" asp-area="" asp-action="Login" asp-controller="Accounts">ورود</a>

                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        
            <div class="row">
                <div class="col-md-3">
                    @await Component.InvokeAsync("ProductGroupComponent")
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>


            </div>
        
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 <a asp-area="" asp-controller="Home" asp-action="ContactUS">تماس با ما </a>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
